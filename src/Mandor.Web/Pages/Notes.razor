@inject IDialogService DialogService
<MudIconButton Icon="@Icons.Material.Outlined.TextSnippet" OnClick="OpenWindow" />

@code {
    
    private void OpenWindow() {
        DialogService.Show<NotesWindow>("Notes Window", new DialogOptions() { CloseButton = true, MaxWidth = MaxWidth.ExtraLarge });
    }
   
    protected override void OnAfterRender(bool firstRender)
    {
        if (!firstRender)
            return;
    }
}